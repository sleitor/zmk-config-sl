 * Physical layout for Souffl√© V3 Sweep
 * 6x5 column-staggered split keyboard (60 keys total)
 */

/ {
    souffle_v3_sweep_layout: souffle_v3_sweep_layout {
        compatible = "zmk,physical-layout";
        display-name = "Default Layout";
        transform = <&default_transform>;
        kscan = <&kscan0>;

        keys  //  w   h    x    y     rot    rx    ry
            // Row 0 - top number row
            = <&key_physical_attrs 100 100    0   60       0     0     0>  // GRAVE
            , <&key_physical_attrs 100 100  100   60       0     0     0>  // 1
            , <&key_physical_attrs 100 100  200   13       0     0     0>  // 2
            , <&key_physical_attrs 100 100  300    0       0     0     0>  // 3
            , <&key_physical_attrs 100 100  400   13       0     0     0>  // 4
            , <&key_physical_attrs 100 100  500   26       0     0     0>  // 5
            , <&key_physical_attrs 100 100  951   26       0     0     0>  // 6
            , <&key_physical_attrs 100 100 1051   13       0     0     0>  // 7
            , <&key_physical_attrs 100 100 1151    0       0     0     0>  // 8
            , <&key_physical_attrs 100 100 1251   13       0     0     0>  // 9
            , <&key_physical_attrs 100 100 1351   60       0     0     0>  // 0
            , <&key_physical_attrs 100 100 1451   60       0     0     0>  // MINUS
            // Row 1 - QWERTY row
            , <&key_physical_attrs 100 100    0  160       0     0     0>  // TAB
            , <&key_physical_attrs 100 100  100  160       0     0     0>  // Q
            , <&key_physical_attrs 100 100  200  113       0     0     0>  // W
            , <&key_physical_attrs 100 100  300  100       0     0     0>  // E
            , <&key_physical_attrs 100 100  400  114       0     0     0>  // R
            , <&key_physical_attrs 100 100  500  127       0     0     0>  // T
            , <&key_physical_attrs 100 100  951  127       0     0     0>  // Y
            , <&key_physical_attrs 100 100 1051  114       0     0     0>  // U
            , <&key_physical_attrs 100 100 1151  100       0     0     0>  // I
            , <&key_physical_attrs 100 100 1251  113       0     0     0>  // O
            , <&key_physical_attrs 100 100 1351  160       0     0     0>  // P
            , <&key_physical_attrs 100 100 1451  160       0     0     0>  // BSLH
            // Row 2 - home row
            , <&key_physical_attrs 100 100    0  261       0     0     0>  // LCTRL
            , <&key_physical_attrs 100 100  100  261       0     0     0>  // A
            , <&key_physical_attrs 100 100  200  214       0     0     0>  // S
            , <&key_physical_attrs 100 100  300  201       0     0     0>  // D
            , <&key_physical_attrs 100 100  400  214       0     0     0>  // F
            , <&key_physical_attrs 100 100  500  227       0     0     0>  // G
            , <&key_physical_attrs 100 100  951  227       0     0     0>  // H
            , <&key_physical_attrs 100 100 1051  214       0     0     0>  // J
            , <&key_physical_attrs 100 100 1151  201       0     0     0>  // K
            , <&key_physical_attrs 100 100 1251  214       0     0     0>  // L
            , <&key_physical_attrs 100 100 1351  261       0     0     0>  // SEMI
            , <&key_physical_attrs 100 100 1451  261       0     0     0>  // SQT
            // Row 3 - bottom letter row (excludes encoder buttons which are in row 4 matrix)
            , <&key_physical_attrs 100 100    0  361       0     0     0>  // LSHFT (col 0)
            , <&key_physical_attrs 100 100  100  361       0     0     0>  // Z (col 1)
            , <&key_physical_attrs 100 100  200  314       0     0     0>  // X (col 2)
            , <&key_physical_attrs 100 100  300  301       0     0     0>  // C (col 3)
            , <&key_physical_attrs 100 100  400  314       0     0     0>  // V (col 4)
            , <&key_physical_attrs 100 100  500  327       0     0     0>  // B (col 5)
            , <&key_physical_attrs 100 100  951  327       0     0     0>  // N (col 6)
            , <&key_physical_attrs 100 100 1051  314       0     0     0>  // M (col 7)
            , <&key_physical_attrs 100 100 1151  301       0     0     0>  // COMMA (col 8)
            , <&key_physical_attrs 100 100 1251  314       0     0     0>  // DOT (col 9)
            , <&key_physical_attrs 100 100 1351  361       0     0     0>  // FSLH (col 10)
            , <&key_physical_attrs 100 100 1451  361       0     0     0>  // RSHFT (col 11)
            // Row 4 - thumb clusters (encoder buttons physically in row 3 area but electrically in row 4)
            , <&key_physical_attrs 100 100    0  461       0     0     0>  // LALT (palm key left) (col 0)
            , <&key_physical_attrs 100 100  230  414       0     0     0>  // LGUI (col 1) - moved 30 right
            , <&key_physical_attrs 100 100  346  439    2300   396   489>  // mo 1 (col 2) - moved 30 right
            , <&key_physical_attrs 100 100  456  440    3000   506   515>  // SPACE left (col 3) - moved 30 right
            , <&key_physical_attrs 100 100  566  440    3000   616   515>  // BSPC (col 4) - moved 40 right total
            , <&key_physical_attrs 100 100  612  324       0     0     0>  // Left encoder (col 5, phys row 3)
            , <&key_physical_attrs 100 100  839  324       0     0     0>  // Right encoder (col 6, phys row 3)
            , <&key_physical_attrs 100 100  886  440  (-3000)  936   515>  // ENTER (col 7) - moved 40 left total
            , <&key_physical_attrs 100 100  996  440  (-3000) 1046   515>  // SPACE right (col 8) - moved 30 left
            , <&key_physical_attrs 100 100 1106  439  (-2300) 1156   489>  // mo 2 (col 9) - moved 30 left
            , <&key_physical_attrs 100 100 1221  414       0     0     0>  // RGUI (col 10) - moved 30 left
            , <&key_physical_attrs 100 100 1451  461       0     0     0>  // RALT (palm key right) (col 11)
            ;
    };
};
